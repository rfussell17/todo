<% layout('/layouts/boilerplate')%>


<div class="card mt-5">
    <h5 class="card-header text-light bg-secondary">Details</h5>
    <div class="card-body mt-3 mb-3">
      <h5 class="card-title"><%= todo.name %></h5>
      <p class="card-text"><%= todo.details %></p>
      <button type="button" class="btn btn-sm btn-outline-dark text-dark button-details m-1"><a href="/todos"><i class="fas fa-angle-left btn-icon"></i></a></button>
      <button type="button" class="btn btn-sm btn-outline-dark text-dark button-details m-1"><a href="/todos/<%=todo._id%>/edit"><i class="fas fa-edit btn-icon"></i></a></button>
      <form action="/todos/<%=todo._id%>?_method=DELETE" style="display: inline;" method="POST">
        <button class="btn btn-sm btn-success"><i
            class="fas fa-check"></i></button></button>
    </form>
    
    </div>
  </div>
</form>